{{! Meals Page }}
<html>

<head>
    <meta charset="UTF-8">
    <title>Foods - Travlr Getaways Website Template</title>
    <link rel="stylesheet" href="css/style.css" type="text/css">
</head>

<body>
    <div id="background">
        <div id="page">
            {{> header}}
            <div id="contents">
                <div class="box">
                    <div>
                        <div class="body">
                            <h1>{{title}}</h1>
                            <ul id="foods">
                                {{#each meals}}
                                <li>
                                    <h2><a href="/meals">{{name}}</a></h2>

                                    <a href="/meals"><img src="/images/{{image}}" alt="{{name}}" height="169"
                                            width="780"><span class="cover"></span></a>

                                    <p>
                                    <h2>{{{description}}}</h2>

                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            {{> footer}}

        </div>
    </div>
</body>